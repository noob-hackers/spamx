clear
center() {
  termwidth=$(stty size | cut -d" " -f2)
  padding="$(printf '%0.1s' ={1..500})"
  printf '%*.*s %s %*.*s\n' 0 "$(((termwidth-2-${#1})/2))" "$padding" "$1" 0 "$(((termwidth-1-${#1})/2))" "$padding"
}
echo -e "\e[92m              
               ___  ____   __    __  __  _  _ 
              / __)(  _ \ /__\  (  \/  )( \/ )
              \__ \ )___//(__)\  )    (  )  ( 
              (___/(__) (__)(__)(_/\/\_)(_/\_)
                                               SETUP
"
cd $HOME
grn="\e[92m"
cod="\e[93m"
########################################
