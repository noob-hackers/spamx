echo -e "\e[34mPACKAGES INSTALLED [\e[92m✓\e[34m]\e[0m"
echo -e "\e[34mSCANNING STORAGE....\e[0m"
FREE=`df -k /storage/emulated | awk '{ print $4 }' | tail -1`
if [[ $FREE -gt 614400 ]]; then
echo -e "\e[34mSTORAGE FOUND [\e[92m✓\e[34m]\e[92m"
